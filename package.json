{
  "name": "react-router-prompt",
  "version": "0.2.2",
  "description": "React Router Navigation Prompt for v6",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "author": "Shyam Gupta (shyamm@outlook.com)",
  "license": "MIT",
  "private": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sshyam-gupta/react-router-prompt.git"
  },
  "homepage": "https://github.com/sshyam-gupta/react-router-prompt#readme",
  "keywords": [
    "confirm",
    "navigation",
    "prompt",
    "react",
    "router"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "start": "tsdx watch",
    "build": "yarn clean && tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint src",
    "size": "size-limit",
    "prepublishOnly": "yarn build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint src"
    }
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^8.1.0",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "esbuild": "^0.14.49",
    "husky": "^8.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^3.1.4",
    "react-router-dom": "^6.3.0",
    "rimraf": "^3.0.2",
    "size-limit": "^8.1.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.4.0",
    "typescript": "^4.7.4"
  },
  "peerDependencies": {
    "react": ">=16.8",
    "react-router": ">=6.x",
    "react-router-dom": ">=6.x"
  },
  "files": [
    "dist",
    "src"
  ],
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": false,
    "trailingComma": "es5"
  },
  "size-limit": [
    {
      "path": "dist/react-router-prompt.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/react-router-prompt.esm.js",
      "limit": "10 KB"
    }
  ]
}
